#!/usr/bin/python3

import sys
import re
import os

with open("toread.md", "r") as f:
    text = f.read()

if len(sys.argv) == 2:
    if sys.argv[1] == "bioc":
        print('====== Pulling first QID in the "Biocuration" list ======')
        regex = r"Biocuration[\s\S]*?(Q[0-9]*)"
        code = "biocuration"
    elif sys.argv[1] == "ct":
        print('====== Pulling first QID in the "Cell types" list ======')
        regex = r"Cell types[\s\S]*?(Q[0-9]*)"
        code = "cell_types"
else:
    print("====== Pulling first QID in toread.md ======")
    regex = r"(Q[0-9]*)"
    code = ""

qid = re.findall(regex, text)[0]
print(qid)


if qid == "Q":
    print("No QID found.")

else:

    with open("toread.md", "w+") as f:
        f.write(text.replace(qid + "\n", ""))
    os.system(f"bash /home/lubianat/Documents/random/wikidata_bib/wread {qid} {code}")

